{
  "name": "workcity-assessment-backend",
  "version": "1.0.0",
  "description": "RESTful API with JWT authentication, user roles, and CRUD operations",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --verbose --coverage",
    "test:watch": "jest --watch",
    "seed": "node seed.js"
  },
  "keywords": ["nodejs", "express", "mongodb", "jwt", "rest-api"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.9.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "mongodb-memory-server": "^8.15.1"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/src/tests/setup.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/tests/**/*.js"
    ],
    "testMatch": [
      "**/src/tests/**/*.test.js"
    ],
    "maxWorkers": 1,
    "forceExit": true,
    "detectOpenHandles": true,
    "testTimeout": 30000
  }
}
